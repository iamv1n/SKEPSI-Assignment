@{
    ViewData["Title"] = "Form Page";
}

<div class="mw-100">
    <form class="mt-4 g-3 mx-auto" method="post">
        <h3 class="mb-4">Fill in the Details</h3>
        <div class="form-group mb-3 row ">
            <label class="col-sm-1 form-label" for="name">Name:</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="Vineet Likhitkar" required />
            </div>
        </div>
        <div class="form-group mb-3 row">
            <label class="col-sm-1 form-label" for="phone">Phone:</label>
            <div class="col-sm-3">
                <input type="tel" pattern="[0-9]{10}" class="form-control" id="phone" name="phone" placeholder="9399946737" required />
            </div>
        </div>
        <div class="form-group mb-3 row">
            <label class="col-sm-1 form-label" for="email">Email:</label>
            <div class="col-sm-3">
                <input type="email" class="form-control" id="email" name="email" placeholder="vineet.likhitkar@gmail.com" required />
            </div>
        </div>
        <div class="form-group mb-3 row">
            <label class="col-sm-1 form-label" for="company">Company:</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="company" name="company" placeholder="Skepsi" />
            </div>
        </div>
        <button class="col-sm-1 btn btn-primary mb-3" type="submit">Submit</button>
    </form>
    
</div>


@if (ViewBag.Message != null)
{
    <h1 class="mt-4 text-center">Welcome, @ViewBag.Message</h1>
}